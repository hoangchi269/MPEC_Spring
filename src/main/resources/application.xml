<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="studentA" class="com.example.mpec.entity.Student" scope="singleton">
        <property name="id" value="1"/>
        <property name="name" value="Dương Hoàng Chí"/>
        <property name="adress" value="Hà Nội"/>
    </bean>
    <bean id="studentB" class="com.example.mpec.entity.Student" scope="prototype">
        <property name="id" value="2"/>
        <property name="name" value="Dương Hoàng Long"/>
        <property name="adress" value="Hà Nội"/>
        <constructor-arg name="diaChi">
            <list>
                <ref bean="diachiA"/>
                <ref bean="diachiB"/>
            </list>
        </constructor-arg>
    </bean>
    <bean id="diachiA" class="com.example.mpec.entity.DiaChi">
        <property name="thanhPho" value="HCM"/>
        <property name="quanHuyen" value="Quan 2"/>
    </bean>
    <bean id="diachiB" class="com.example.mpec.entity.DiaChi">
        <property name="thanhPho" value="Da Nang"/>
        <property name="quanHuyen" value="Quan 3"/>
    </bean>
</beans>